.chapter
	text-indent: 7px

.hr
	display: block
	height: 2px
	background: #FAFAFA
	margin: 38px 0 15px

.navbar-toggle
	padding: 0px
	margin-top: 10px
	margin-left: 4px

.sticking
	background: #fff
	box-shadow: 0px 3px 10px -2px rgba(0,0,0,0.2)
	z-index: 9999
	.search-box-area
		display: block !important

.header-br
	border-bottom: 1px solid #F5F5F5

.post-title
	font-family: Cormorant
	font-size: 24px
	color: #444444
	font-style: italic
