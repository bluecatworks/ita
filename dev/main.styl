/**
 * Responsive styles
 **/


@media (min-width: 1200px)
	.container
		width: 1160px

@media (min-width: 768px) and (max-width: 979px)
	.container
		width: 920px

@media (max-width: 767px)
	.container
		width: 720px

@media (max-width: 480px)
	.mobile-display
		display: block
	.mobile-hidden
		display: none
	.container
		width: 100%
	header
		height: auto
		.socials
			text-align: center
			padding: 15px 0 0
		.logo img
			position: relative
			top: 0px
			margin: 15px
			max-height: 75px
		.lang, .search-box
			text-align: center
		.search-box
			padding: 0 0 10px
	.left-collapse
		padding: 30px 20px 20px
		width: 100%
		.socials
			position: relative
			top: 0px
			padding: 20px 0 0
			text-align: center
		.nsu-form
			display: none
	.slideshow_big
		display: none
	img
		max-width: 100%
		height: auto

	.logo-area
		.toggle-btn
			width: 40px
			padding: 0 0 0 5px
		.logo-text
			text-align: left
			font-size: 16px
			width: calc(100% - 40px)

	.sticking .search-box-area
		display: none !important

	.content .metaslider
		.flex-control-nav
			bottom: 70px
		.caption-wrap
			position: relative
			top: 0px
			background: #000
			font-size: 16px
			span
				float: none
				display: block
				font-size: 16px
				padding: 1px 0 1px 15px

	.home_page .chapter
		min-height: 0px

	.to-blog, .to-next
		display: none

