/* Responsive Menu */
@media (max-width: 979px)
	.navbar-inverse
		border-radius: 3px
		.navbar-brand
			display: block !important
		.menu
			li
				display: block
				line-height: normal
				text-align: left
				a
					color: #999999
					font-weight: bold
					border-radius: 3px
					padding: 7px 13px
					margin-bottom: 2px
					&:hover
						color: #fff
						background: #111111

/**
 * Helpers
 **/
.text_right
	text-align: right

.text_center
	text-align: center

.right
	float: right

.left
	float: left

.hidden
	display: none !important
	visibility: hidden

.underline
	text-decoration: underline

.clear
	clear: both

.no-padd
	padding: 0px !important

.no-marg
	margin: 0px !important

.width-100
	width: 100%

.navbar-toggle .icon-bar + .icon-bar
	margin-top: 6px