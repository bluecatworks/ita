.about_page
	.container.small
		max-width: 890px

	.sidemenu
		position: fixed
		left: 20px
		top: 220px
		ul
			margin: 0
			padding: 0
			list-style: none

			li
				a
					font-size: 14px
					font-weight: bold
					font-style: italic
					font-family: Cormorant
					padding-left: 20px
					display: inline-block
					background: url(images/square.png) no-repeat left center

					&.active
						background: url(images/square-active.png) no-repeat left center


	.entry_title
		margin-bottom: 40px

	#founder
		padding-bottom: 40px
		border-bottom: 1px dotted #E6E6E6

		.p-title
			font-size: 21px
			font-weight: bold
			font-family: Cormorant
			margin-top: 0

		.img
			float: left
			margin: 0 20px 20px 0

	#history
		padding-bottom: 40px
		border-bottom: 1px dotted #E6E6E6
		.entry_title
			margin-top: 70px

		h3
			font-size: 24px !important
			font-family: Cormorant
			font-style: italic
			text-align: center
			margin-top: 50px !important
			margin-bottom: 15px !important

		.values,
		.goals
			line-height: 25px

	#facultystaff
		padding-bottom: 40px
		border-bottom: 1px dotted #E6E6E6
		.entry_title
			margin-top: 70px !important
		.name
			font-size: 21px
			font-weight: bold
			font-family: Cormorant
			margin-top: 0

		.drs
			.name
				margin-top: 40px

	#community
		padding-bottom: 40px
		border-bottom: 1px dotted #E6E6E6
		line-height: 25px

		.entry_title
			margin-top: 60px !important

		.subheading
			font-size: 21px
			font-weight: bold
			font-family: Cormorant
			margin-top: 0

	#students
		padding-bottom: 40px

		.entry_title
			margin-top: 60px

		.video
			text-align: center

	.social-media
		.logos
			overflow: hidden

			a
				display: block
				lost-column: 1/5 0 0
				min-height: 75px
				position: relative
				text-align: center
				margin-bottom: 25px

				span
					position: absolute
					display: inline-block
					bottom: 0
					left: 0
					right: 0
					text-decoration: underline

	.social-media,
	.testimonials,
	.find
		h3
			font-size: 24px !important
			font-family: Cormorant
			font-style: italic
			text-align: center
			margin-top: 50px !important
			margin-bottom: 30px !important

	.testimonials
		.testimonial-slider
			.item
				padding: 20px
				border: 1px dotted #444444
				font-size: 14px
				line-height: 22px

		.author
			font-size: 18px
			font-weight: bold
			font-family: Cormorant
			text-align: right
			margin-bottom: 0

		.bx-pager
			text-align: center
			margin-top: 6px

			.bx-pager-item
				display: inline-block
				vertical-align: middle
				margin: 0 5px

			.bx-pager-link
				text-indent: -99999px !important
				background: url(images/dot.svg) no-repeat top center
				background-size: 100%
				width: 12px
				height: 12px
				display: inline-block

			.active
				background: url(images/dot-active.svg) no-repeat top center
				background-size: 100%

	.find
		font-size: 14px

		.row
			border-top: 1px dotted #E6E6E6
			margin: 0

			&.labels
				border-top: none

			.cell
				border-right: 1px dotted #E6E6E6
				lost-column: 2.3/12 0 0
				padding: 10px

				&:last-child
					border-right: none

			.cell-big
				lost-column: 5.1/12 0 0
				padding: 10px

	.entry_content
		a
			font-size: 14px
			text-decoration: underline
			color: #808080
		p
			font-size: 14px
			margin-bottom: 15px
			margin-top: 0

	.accordeon
		.item
			&:nth-child(2),
			&:nth-child(3)
				.acc-content
					display: none

	.acc-title
		font-size: 24px !important
		cursor: pointer
		font-family: Cormorant
		font-style: italic
		text-align: center
		margin-top: 50px !important
		margin-bottom: 15px !important
		clear: both

		&:after
			content: " "
			display: inline-block
			margin-left: 10px
			width: 10px
			height: 9px
			background: url(images/triangle-bottom.png) no-repeat top center

		&.open
			&:after
				content: " "
				display: inline-block
				width: 10px
				height: 9px
				background: url(images/triangle-top.png) no-repeat top center