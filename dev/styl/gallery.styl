.gallery_page
	.container.big
		width: 1220px

		+below(1024px)
			width: 100%

		+below(767px)
			width: 100%

	.grid
		margin-top: 25px

		.item
			width: 300px
			height: 300px

			@media (max-width: 1024px) and (orientation: portrait)
				width: 192px
				height: 192px

			+below(767px)
				width: 100%
				height: auto

			a
				display: block

				&:hover

					&:after
						content: " ";
						display: block
						position: absolute
						top: 0
						left: 0
						width: 100%
						height: 100%
						z-index: 999
						background: url(images/magnifier.svg) no-repeat center center
						background-size: 25px

					img
						-webkit-mask-image: none

			img
				mask-image: -webkit-gradient(linear, right 10%, left top, from(rgba(0,0,0,1)), to(rgba(0,0,0,0.4)))
				-webkit-mask-image: -webkit-gradient(linear, right 10%, left top, from(rgba(0,0,0,1)), to(rgba(0,0,0,0.4)))

		.item-width-2
			width: 600px
			@media (max-width: 1024px) and (orientation: portrait)
				width: 384px

			+below(767px)
				width: 100%
				height: auto

		.item-height-2
			height: 600px
			@media (max-width: 1024px) and (orientation: portrait)
				height: 384px

			+below(767px)
				width: 100%
				height: auto

	.show-more
		margin-top: 20px

		img
			width: 219px
			height: 24px