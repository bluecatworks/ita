.gallery_page
	.container.big
		width: 1220px

	.grid
		margin-top: 25px

		.item
			width: 300px
			height: 300px

			a
				display: block

				&:hover

					&:after
						content: " ";
						display: block
						position: absolute
						top: 0
						left: 0
						width: 100%
						height: 100%
						z-index: 999
						background: url(images/magnifier.svg) no-repeat center center
						background-size: 25px

					img
						-webkit-mask-image: none

			img
				mask-image: -webkit-gradient(linear, right 10%, left top, from(rgba(0,0,0,1)), to(rgba(0,0,0,0.4)))
				-webkit-mask-image: -webkit-gradient(linear, right 10%, left top, from(rgba(0,0,0,1)), to(rgba(0,0,0,0.4)))

		.item-width-2
			width: 600px

		.item-height-2
			height: 600px

	.show-more
		margin-top: 20px

		img
			width: 219px
			height: 24px